@model OwlSliderImage
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Owl Slider Image Id</th>
                <th>Owl Slider Image</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <div class="wrapper">
                        <img class="w-100 d-block" style="object-fit: contain" src="~/img/@Model.Image" />
                    </div>
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="UpdateSliderImage" asp-route-id="@Model.Id">Update</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="DeleteSliderImage" asp-route-id="@Model.Id">Delete</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>