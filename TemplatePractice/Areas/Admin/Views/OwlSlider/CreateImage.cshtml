@model SliderImageCreateViewModel
@if (ViewBag.Info == "First you need to create an owl slider")
{
<span class="text-danger">First you need to create an owl slider</span>
}
else
{
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-md-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Create an Owl Slider</h4>
                            <form enctype="multipart/form-data" class="forms-sample" method="post" asp-action="CreateImage">
                                <div class="form-group">
                                    <label asp-for="Files">Upload a slider image</label>
                                    <input type="file" multiple accept="image/*" asp-for="Files"/>
                                    <span class="text-danger" asp-validation-for="Files"></span>
                                </div>
                                
                                <button type="submit" class="btn btn-primary me-2" >Submit</button>
                                <button class="btn btn-light" asp-action="Index">Cancel</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}