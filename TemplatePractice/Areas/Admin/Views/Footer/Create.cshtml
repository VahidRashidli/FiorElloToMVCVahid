@model Footer
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create a new Layout (Links)</h4>                     
                        
                        <form enctype="multipart/form-data" class="forms-sample" method="post" asp-controller="Footer" asp-action="Create">
                            <div class="form-group">
                                <label asp-for="FacebookLink">Facebook Link</label>
                                <input type="text" class="form-control" asp-for="FacebookLink" placeholder="FacebookLink">
                                <span class="text-danger" asp-validation-for="FacebookLink"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LinkedInLink">LinkedIn Link</label>
                                <input type="text" class="form-control" asp-for="LinkedInLink" placeholder="LinkedInLink">
                                <span class="text-danger" asp-validation-for="LinkedInLink"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="File">Image</label>
                                <input type="file" class="form-control" asp-for="File" accept="image/*">
                                <span class="text-danger" asp-validation-for="File"></span>
                            </div>

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
                            