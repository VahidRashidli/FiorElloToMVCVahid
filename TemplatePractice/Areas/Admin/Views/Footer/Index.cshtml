@model FooterIndexViewModel
<div class="row">
    @if (Model.Footer != null)
    {
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"> Footer </h4>
                    <div class="table-responsive pt-3">
                        <table class="table table-dark">
                            <thead>
                                <tr>
                                    <th>
                                        Footer Links and Image
                                    </th>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        #
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.Footer.FacebookLink</td>
                                    <td rowspan="3"><a class="btn btn-warning" asp-action="Update">Update</a></td>
                                    <td rowspan="3"><a class="btn btn-danger" asp-action="Delete">Delete</a></td>
                                </tr>
                                <tr>
                                    <td>@Model.Footer.LinkedInLink</td>

                                </tr>
                                <tr>
                                    <td><img class="w-100 d-block" style="object-fit:cover;" src="~/img/@Model.Footer.Image" /></td>

                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Footer Categories </h4>
                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    Footer Category Id
                                </th>
                                <th>
                                    Footer Category Name
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (FooterCategory footerCategory in Model.FooterCategories)
                            {

                                <tr>
                                    <td>@footerCategory.Id</td>
                                    <td>@footerCategory.Name</td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Footer Categories </h4>
                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    Footer Category Section Id
                                </th>
                                <th>
                                    Footer Category Section Name
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (FooterCategorySection footerCategorySection in Model.FooterCategorySections)
                            {

                                <tr>
                                    <td>@footerCategorySection.Id</td>
                                    <td>@footerCategorySection.Name</td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>