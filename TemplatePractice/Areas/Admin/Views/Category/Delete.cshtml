@model Category
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Delete a Category</h4>
                        <form class="forms-sample" method="post" asp-controller="Category" >
                            <div class="form-group">
                                <span class="text-danger">Are your sure that you want to delete?</span>
                                <button class="btn btn-danger" asp-action="Delete">Delete</button>
                                <button class="btn btn-warning" asp-action="Index">Cancel</button>
                            </div>
                           
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
